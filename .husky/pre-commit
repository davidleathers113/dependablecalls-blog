#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Run lint-staged for automatic formatting and linting
npx lint-staged

# Run type checking
echo "🔍 Running type check..."
npm run type-check || {
  echo "❌ Type check failed. Please fix TypeScript errors before committing."
  exit 1
}

echo "✅ Pre-commit checks passed!"