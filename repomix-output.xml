  timezone: z.string(),
  language: z.string(),
  dateFormat: z.string(),
  phoneFormat: z.string(),
  currency: z.string()
})

type UpdateProfileData = z.infer<typeof profileUpdateSchema>

export default function ProfileSettingsPage() {
  const { user } = useAuthStore()
