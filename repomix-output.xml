    CASE 
        WHEN expires_at < NOW() THEN 'expired'
        WHEN expires_at < NOW() + INTERVAL '30 days' THEN 'expiring_soon'
        ELSE 'active'
    END AS status,
    AGE(NOW(), created_at) AS age
FROM encryption_keys
