is_placeholder() {
    local value="$1"
    
    # Check for common placeholder patterns
    if [[ "$value" =~ ^your_.* ]] || \
       [[ "$value" =~ .*_here$ ]] || \
       [[ "$value" =~ ^<.*>$ ]] || \
       [[ "$value" == "CHANGE_ME" ]] || \
