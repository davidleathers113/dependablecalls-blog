        <Card>
          <CardHeader>
            <h2>Semantic Header</h2>
          </CardHeader>
          <CardContent>
            <p>Semantic paragraph</p>
          </CardContent>
        </Card>
      )
      
      expect(screen.getByRole('heading', { level: 2 })).toBeInTheDocument()
      expect(screen.getByText('Semantic paragraph').tagName).toBe('P')
