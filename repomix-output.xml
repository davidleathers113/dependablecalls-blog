import { retry } from '@/lib/retry';

export async function apiCallWithRetry<T>(
  fn: () => Promise<T>,
  maxRetries = 3
): Promise<T> {
  return retry(fn, {
    retries: maxRetries,
    retryDelay: (attempt) => Math.min(1000 * Math.pow(2, attempt), 30000),
    retryIf: (error) => {
