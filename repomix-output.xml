export function calculateQualityScore(
  duration: number,
  converted: boolean,
  fraudScore: number
): number {
  let score = 50 // Base score

  // Duration bonus
  if (duration > 120) score += 20
  else if (duration > 60) score += 10

  // Conversion bonus
  if (converted) score += 30

  // Fraud penalty
  score -= fraudScore * 10

  return clamp(score, 0, 100)
