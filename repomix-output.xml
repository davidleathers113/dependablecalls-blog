      if (!id) {
        setCampaignNotFound(true)
        setLoading(false)
        return
      }
      
      try {
        const campaign = await fetchCampaign(id)
        if (campaign) {
          reset(campaign)
        } else {
          setCampaignNotFound(true)
        }
      } catch (error) {
        console.error('Failed to load campaign:', error)
        setCampaignNotFound(true)
      } finally {
        setLoading(false)
      }
    }
    
    loadCampaign()
  }, [id, reset])
  
