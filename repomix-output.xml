  message: string
  statusCode: number
}

// Common error codes
'MFA_SETUP_REQUIRED' | 'MFA_VERIFICATION_REQUIRED' |
'INVALID_CODE' | 'RATE_LIMITED' | 'DEVICE_NOT_TRUSTED'
