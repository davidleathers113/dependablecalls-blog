                        node.getAttribute('aria-labelledby') ||
                        node.getAttribute('alt')
      const hasDataTable = node.parentElement.querySelector('.chart-data-table') ||
                           node.getAttribute('aria-describedby')
      
      return hasAltText && hasDataTable
    }
  }
}

