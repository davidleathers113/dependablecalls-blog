      const { login } = useAuthStore.getState()
      
      // Start login
      const loginCall = login('test@example.com', 'password123')
      
      // Check loading state
      expect(useAuthStore.getState().loading).toBe(true)
      
      // Resolve login
      resolveLogin!({
        data: { user: null, session: null },
        error: { message: 'Login failed' },
      })
      
      await loginCall
      
