CREATE TABLE IF NOT EXISTS key_rotations (
    id UUID PRIMARY KEY DEFAULT uuid_generate_v4(),
    rotation_id VARCHAR(255) UNIQUE NOT NULL,
    old_key_id VARCHAR(255) NOT NULL,
    new_key_id VARCHAR(255) NOT NULL,
