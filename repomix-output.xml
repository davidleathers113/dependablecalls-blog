            <Route path="terms" element={<TermsPage />} />
            <Route path="compliance" element={<CompliancePage />} />
          </Route>
          
          {/* Protected app routes */}
          <Route path="/app" element={
            <ProtectedRoute>
              <AppLayout />
            </ProtectedRoute>
          }>
            <Route index element={<Navigate to="/app/dashboard" replace />} />
