export const useStore = create<StoreState>()(
  subscribeWithSelector((set, get) => ({
    // Initial state
    data: [],
    isLoading: false,
    error: null,
    
    // Actions
    setData: (data) => set({ data }),
    setLoading: (isLoading) => set({ isLoading }),
    setError: (error) => set({ error }),
    reset: () => set({ data: [], isLoading: false, error: null }),
  }))
);
