          'medium': 'âš¡',
          'low': 'â„¹ï¸',
          'info': 'ðŸ’¡'
        }[rec.priority] || 'â„¹ï¸';
        
        summary += `${icon} **${rec.title}**\n`;
        summary += `${rec.description}\n`;
