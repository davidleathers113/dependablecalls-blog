    );
END;
$$ LANGUAGE plpgsql SECURITY DEFINER;

-- Helper function to get buyer ID for current user
CREATE OR REPLACE FUNCTION get_buyer_id(user_uuid UUID DEFAULT auth.uid())
RETURNS UUID AS $$
BEGIN
