  u.id as user_id,
  u.role,
  COUNT(c.id) as total_calls,
  COUNT(c.id) FILTER (WHERE c.status = 'completed') as completed_calls,
  SUM(c.payout_amount) as total_earnings,
  AVG(c.quality_score) as avg_quality_score
