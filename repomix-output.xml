      v_setting_type,
      TG_TABLE_NAME || '.settings',
      v_old_value,
      v_new_value,
      CASE WHEN TG_OP = 'INSERT' THEN 'create' ELSE 'update' END,
      jsonb_build_object('table', TG_TABLE_NAME, 'operation', TG_OP)
    );
  END IF;

  RETURN NEW;
END;
$$ LANGUAGE plpgsql;

