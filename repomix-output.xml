    fraudConfig.truecaller.apiKey &&
    fraudConfig.ipquality.apiKey &&
    fraudConfig.fraudlabs.apiKey &&
    fraudConfig.sift.apiKey &&
    fraudConfig.maxmind.apiKey
  )
