export function RealtimeChart({ chartType, timeRange }: RealtimeChartProps) {
  const [data, setData] = useState<ChartDataPoint[]>([]);
  
  useEffect(() => {
    const subscription = supabase
      .channel(`${chartType}-updates`)
      .on('postgres_changes', {
        event: '*',
        schema: 'public',
        table: getTableForChartType(chartType),
      }, (payload) => {
