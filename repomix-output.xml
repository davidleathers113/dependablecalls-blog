        # Remove quotes if present
        value=$(echo "$value" | sed -e 's/^"//' -e 's/"$//' -e "s/^'//" -e "s/'$//")
        
        # Check if this is a known DCE secret
        if [[ -n "${SECRET_CONTEXTS[$key]}" ]]; then
